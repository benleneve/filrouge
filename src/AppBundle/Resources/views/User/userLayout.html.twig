 <h3>
    <div class="headerBlock">
        <div class="ico">
            <img alt="Voir plus d'informations" src="{{asset('bundles/app/images/block_close.png')}}" />
        </div>
        {% include('AppBundle:User:userHeader.html.twig') %}
        <div class="status">
            {% if user.availability == true %}
                Disponible
                <img alt="Disponible" src="{{asset('bundles/app/images/status_green.png')}}" />
            {% elseif user.availability == false %}
                Indisponible
                <img alt="Indisponible" src="{{asset('bundles/app/images/status_red.png')}}" />
            {% endif %}
        </div>
        <div class="clear"></div>
    </div>
</h3>
        
<div class="bodyBlock">
    <div class="userSkill">
        {% if (user.userSkills|length !=0) %}
            <h4>Compétences</h4>
            {% for userSkill in user.userSkills %}
                <div class="name">
                    {{userSkill.skill.name}}
                </div>
                <div class="level">
                    {% if userSkill.level == 0 %}
                        <img alt="Disponible" src="{{asset('bundles/app/images/star_0.png')}}" />
                    {% elseif userSkill.level == 1 %}
                        <img alt="Disponible" src="{{asset('bundles/app/images/star_1.png')}}" />
                    {% elseif userSkill.level == 2 %}  
                        <img alt="Disponible" src="{{asset('bundles/app/images/star_2.png')}}" />
                    {% elseif userSkill.level == 3 %}
                        <img alt="Disponible" src="{{asset('bundles/app/images/star_3.png')}}" />
                    {% elseif userSkill.level == 4 %}  
                        <img alt="Disponible" src="{{asset('bundles/app/images/star_4.png')}}" />
                    {% elseif userSkill.level == 5 %}  
                        <img alt="Disponible" src="{{asset('bundles/app/images/star_5.png')}}" />
                    {% endif %}
                </div>
                <div class="clear"></div>
            {% endfor %}
        {% else %}
            <h4>Aucune compétence</h4>
        {% endif %}
    </div>  
    
    <div>
        <h4> Nombre de projets en cours : {{ user.worksOnProjects|length }}</h4>
    </div>
    <div class="userSeeMore">
       <a href=" {{path('filrouge_user_detail', {'id': user.id } )}} " class="btnAction">> Voir le profil</a>
    </div>
</div>
